<!DOCTYPE html>
<html>
<head>
  <title>Lots</title>
</head>
<body>
  <% if (user) { %>
    <p>Welcome, <%= user.username %> | Balance: <%= user.balance %> грн</p>
    <form action="/logout" method="get">
      <button>Logout</button>
    </form>
    <form action="/add-funds" method="post">
      <input type="number" name="amount" placeholder="Sum" required>
      <button type="submit">Submit</button>
    </form>
    <a href="/create">Create lot</a>
  <% } else { %>
    <a href="/login">Login</a>
    <a href="/register">Register</a>
  <% } %>

  <% if (message) { %>
    <p><%= message %></p>
  <% } %>

  <h2>Lots</h2>
  <ul>
    <% lots.forEach(lot => { %>
      <li>
        <a href="/lots/<%= lot.id %>"><%= lot.title %></a> - <%= lot.startingPrice %> грн
        <% if (user && user.id === lot.userId) { %>
          <form action="/lots/<%= lot.id %>/delete" method="post" style="display:inline">
            <button type="submit">Delete</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>
</body>
</html>
